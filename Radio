<div id="wheelModal">
    <div class="wheel-content">
        <canvas id="wheelCanvas" width="300" height="300" style="border-radius:50%; box-shadow:0 0 20px #fff;"></canvas>
        <div style="position:absolute; top:-10px; left:50%; transform:translateX(-50%); border-top: 20px solid white; border-left: 10px solid transparent; border-right: 10px solid transparent;"></div>
    </div>
    <button class="btn-primary" style="margin-top:20px; width: 100px;" onclick="spinWheel()">SPIN</button>
    <button class="close-btn" onclick="document.getElementById('wheelModal').style.display='none'">Close</button>
</div>

<script>
    // Server list

    const MIRRORS = [
        "https://at1.api.radio-browser.info/json",
        "https://nl1.api.radio-browser.info/json",
        "https://de1.api.radio-browser.info/json"
    ];
    let currentMirrorIndex = 0;

    // UI Refs
    const grid = document.getElementById('stationGrid');
    const statusMsg = document.getElementById('statusMessage');
    const audio = document.getElementById('audioPlayer');
    const pName = document.getElementById('playerStationName');
    const pStatus = document.getElementById('playerStatus');

    let stations = [];

    // init
    window.onload = function() {
        attemptFetch(true); 
    };

    // fetch datya
    async function attemptFetch(isInitial = false) {
        grid.innerHTML = ''; 
        showStatus(`Contacting Server ${currentMirrorIndex + 1}...`);

        const searchTerm = document.getElementById('searchInput').value.trim();
        
        // build URL
        let baseUrl = MIRRORS[currentMirrorIndex];
        let url = `${baseUrl}/stations/search?limit=30&hidebroken=true&order=clickcount&reverse=true`;
        
        if (searchTerm) {
            url += `&name=${encodeURIComponent(searchTerm)}`;
        } else if (isInitial) {
            // get top stations
            url = `${baseUrl}/stations/search?limit=30&hidebroken=true&order=clickcount&reverse=true`;
        }

        try {
            console.log("Fetching from:", url);
            
            // IOS: credentials: 'omit'
            const response = await fetch(url, {
                method: 'GET',
                credentials: 'omit',
                headers: {
                    'Content-Type': 'application/json'
                }
            });

            if (!response.ok) throw new Error(`HTTP Error: ${response.status}`);
            
            stations = await response.json();
            
            if (stations.length === 0) {
                showStatus("No stations found. Try a different search.");
                return;
            }

            renderStations(stations);

        } catch (error) {
            console.error("Fetch failed:", error);
            
            // Try next server
            currentMirrorIndex++;
            if (currentMirrorIndex < MIRRORS.length) {
                showStatus(`Server ${currentMirrorIndex} failed. Retrying next mirror...`);
                setTimeout(() => attemptFetch(isInitial), 500); // Small delay then retry
            } else {
                // All failed
                currentMirrorIndex = 0; // Reset for next manual try
                showStatus(`Connection Failed.<br><br>Error: ${error.message}<br><br>Note: If opening as a local file on iPhone, this will fail. You must host it.`);
            }
        }
    }

    function showStatus(text) {
        grid.innerHTML = `<div class="message-box">${text}</div>`;
    }

    function renderStations(data) {
        grid.innerHTML = '';
        data.forEach(station => {
            const card = document.createElement('div');
            card.className = 'station-card';
            
            // Image handling with fallback
            let imgUrl = station.favicon || '';
            
            card.innerHTML = `
                <div class="station-img-wrapper">
                    ${imgUrl ? `<img src="${imgUrl}" class="station-img" onerror="this.style.display='none'; this.nextElementSibling.style.display='block'">` : ''}
                    <div style="font-size:2rem; display:${imgUrl ? 'none' : 'block'}">ðŸ“»</div>
                </div>
                <div class="station-name">${station.name}</div>
                <div class="station-tags">${station.countrycode}</div>
            `;
            
            card.onclick = () => playStation(station);
            grid.appendChild(card);
        });
    }

    // player
    function playStation(station) {
        pName.textContent = station.name;
        pStatus.textContent = "Loading...";
        
        let url = station.url_resolved;
        
        
        if (window.location.protocol === 'https:' && url.startsWith('http:')) {
            console.warn("Attempting to upgrade stream to HTTPS");
            url = url.replace('http:', 'https:');
        }

        if (Hls.isSupported() && url.includes('.m3u8')) {
            const hls = new Hls();
            hls.loadSource(url);
            hls.attachMedia(audio);
            hls.on(Hls.Events.MANIFEST_PARSED, () => audio.play());
            pStatus.textContent = "Playing (HLS)";
        } else {
            // ios
            audio.src = url;
            audio.load();
            audio.play()
                .then(() => pStatus.textContent = "Playing")
                .catch(e => {
                    pStatus.textContent = "Error / Tap Play";
                    console.error(e);
                });
        }
    }

    // wheel
    let wheelCtx = document.getElementById('wheelCanvas').getContext('2d');
    
    function openWheel() {
        if(stations.length < 2) return alert("Search for stations first!");
        document.getElementById('wheelModal').style.display = 'flex';
        drawWheel();
    }

    function drawWheel() {
        let colors = ['#e74c3c', '#3498db', '#f1c40f', '#2ecc71', '#9b59b6'];
        let arc = 2 * Math.PI / 8; // Show top 8
        
        wheelCtx.clearRect(0,0,300,300);
        
        for(let i=0; i<8; i++) {
            wheelCtx.beginPath();
            wheelCtx.fillStyle = colors[i % colors.length];
            wheelCtx.moveTo(150,150);
            wheelCtx.arc(150, 150, 150, i*arc, (i+1)*arc);
            wheelCtx.fill();
            wheelCtx.stroke();
        }
    }

    function spinWheel() {
        let rotation = 0;
        let interval = setInterval(() => {
            rotation += 20;
            document.getElementById('wheelCanvas').style.transform = `rotate(${rotation}deg)`;
        }, 16);
        
        setTimeout(() => {
            clearInterval(interval);
            let winner = stations[Math.floor(Math.random() * Math.min(8, stations.length))];
            alert(`Winner: ${winner.name}`);
            playStation(winner);
            document.getElementById('wheelModal').style.display = 'none';
        }, 2000);
    }
</script>
</body>
